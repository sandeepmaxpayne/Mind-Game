<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="13dp"
        android:transformPivotX="@dimen/alerter_activity_horizontal_margin"
        android:textAlignment="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInfo"
            android:text="OYUN BITTI"
            android:padding="12dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtScoreTitle"
            android:layout_marginBottom="10dp"
            android:text="@string/game_score"
            android:textAlignment="center"
            android:textColor="@color/textNewColor"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtScore"
            android:layout_marginBottom="10dp"
            android:text="oyun puani"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/textNewColor"/>
        <Button
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_submit"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_rounded_v2"
            android:text="@string/home"
            android:textAllCaps="false"
            android:textColor="@color/textNewColor"/>

    </LinearLayout>
</LinearLayout>